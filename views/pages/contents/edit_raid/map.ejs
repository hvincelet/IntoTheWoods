                        <script src="/views/pages/contents/edit_raid/helper_post.js"></script>
                        <script src="/views/pages/contents/edit_raid/course.js"></script>
                        <script src="/views/pages/contents/edit_raid/map.js"></script>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>