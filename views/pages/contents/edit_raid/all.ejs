<div class="breadcrumb-holder">
    <div class="container-fluid">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="/dashboard">Accueil</a></li>
            <li class="breadcrumb-item active">Gérer mes raids</li>
        </ul>
    </div>
</div>
<section class="forms">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header d-flex align-items-center">
                        <h4>Sélectionnez votre Raid</h4>
                    </div>
                    <div class="card-body">
                        <table id="table" class="table table-bordered table-responsive-md table-striped text-center">
                            <thead>
                                <tr>
                                    <th class="text-center">Nom</th>
                                    <th class="text-center">Édition</th>
                                    <th class="text-center">Date</th>
                                    <th class="text-center">Lieu</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>

                            <tbody>
                                <% user.raid_list.forEach(function (raid) { %>
                                    <tr>
                                        <td class="pt-3-half"><%= raid.name %></td>
                                        <td class="pt-3-half"><%= raid.edition %></td>
                                        <td class="pt-3-half"><%= raid.date %></td>
                                        <td class="pt-3-half"><%= raid.place %></td>
                                        <td class="pt-3-half"><button type="button" class="btn btn-primary btn-rounded btn-sm my-0" onclick="window.location='/editraid/<%= raid.id %>'">Éditer ce Raid</button></td>
                                    </tr>
                                <% }); %>

                                <% raids.forEach(function (raid) { %>
                                    <tr>
                                        <td class="pt-3-half"><%= raid.raid.name %></td>
                                        <td class="pt-3-half"><%= raid.raid.edition %></td>
                                        <td class="pt-3-half"><%= raid.raid.date %></td>
                                        <td class="pt-3-half"><%= raid.raid.place %></td>
                                        <td class="pt-3-half">Ce raid n'est pas à vous !</td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/jq-3.3.1/dt-1.10.18/b-1.5.4/r-2.2.2/sc-1.5.0/sl-1.2.6/datatables.min.css"/>
 
<script type="text/javascript" src="https://cdn.datatables.net/v/dt/jq-3.3.1/dt-1.10.18/b-1.5.4/r-2.2.2/sc-1.5.0/sl-1.2.6/datatables.min.js"></script>

<script type="text/javascript">
    $(document).ready( function () {
        $('.table').DataTable();
    });
</script>
