<div class="breadcrumb-holder">
    <div class="container-fluid">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="/dashboard">Accueil</a></li>
            <li class="breadcrumb-item active">Gérer mes raids</li>
        </ul>
    </div>
</div>
<section class="forms">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header d-flex align-items-center">
                        <h4>Sélectionnez votre Raid</h4>
                    </div>
                    <div class="card-body">
                        <table id="table"
                               class="table table-bordered table-responsive-md table-striped text-center">
                            <tr>
                                <th class="text-center">Nom</th>
                                <th class="text-center">Édition</th>
                                <th class="text-center">Date</th>
                                <th class="text-center">Lieu</th>
                                <th class="text-center">Actions</th>
                            </tr>

                            <% user.other_raid_list.forEach(function (raid) { %>
                                <tr>
                                    <td class="pt-3-half"><%= raid.name %></td>
                                    <td class="pt-3-half"><%= raid.edition %></td>
                                    <td class="pt-3-half"><%= raid.date %></td>
                                    <td class="pt-3-half"><%= raid.place %></td>
                                    <td class="pt-3-half"><button type="button" class="btn btn-primary btn-rounded btn-sm my-0" onclick="window.location='/editraid/<%= raid.id %>'">Éditer ce Raid</button></td>
                                </tr>
                            <% }); %>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
