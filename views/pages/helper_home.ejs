<!DOCTYPE html>
<html lang="fr">
<!--<% include ../partials/head %>-->
<body>
<div class="page login-page" style="height:100%;">
    <% if(typeof errorMessage !== "undefined") { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert" style="margin-top: 20px;">
            <%= errorMessage %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    <% }else{ %>

        <style>
            #panel-right {
                top: 65px;
                right: 10px;
                position: absolute;
                z-index: 1;
            }
        </style>

        <div class="container-fluid">
            <link rel="stylesheet"
                  href="https://cdn.rawgit.com/openlayers/openlayers.github.io/master/en/v5.2.0/css/ol.css"
                  type="text/css">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header d-flex align-items-center">
                            <h2>Itinéraire jusqu'à votre poste</h2>
                            <button class="btn" onclick="redirectGoogleMaps()" style="right: 10px; position: absolute;"><i class="fab fa-google"></i> Ouvrir dans Google Maps </button>
                        </div>
                        <div class="card-body" style="padding-right: 0px; padding-left: 0px; padding-top: 0px">
                            <div id="map" style="width: 100%; height: 100%;">
                                <div id="panel-right">
                                    <button id="checkin-button" class="btn btn-lg btn-success" onclick="performCheckin()"><i class="fas fa-user-check"></i> Check-in</button>
                                </div>
                            </div>

                            <div>
                                <h2>
                                    Intitulé du poste
                                </h2>
                                <p>
                                    Début du Raid
                                </p>
                                <label>
                                    Decription du poste
                                </label>
                            </div>

                            <script>
                                const assignment = <%- JSON.stringify(assignment) %>;
                                const helper = <%- JSON.stringify(helper) %>;
                                const helper_post = <%- JSON.stringify(helper_post) %>;
                                const point_of_interest = <%- JSON.stringify(point_of_interest) %>;
                            </script>
                            <script src="https://ignf.github.io/geoportal-access-lib/latest/dist/GpServices.js"></script>
                            <script src="/views/pages/helpers/map.js"></script>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
</div>
<% include ../partials/footer %>
</body>
</html>
